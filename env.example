# Backend Environment Variables
# העתק את הקובץ הזה ל-backend/.env ומלא את הערכים

# API Keys
XAI_API_KEY=your-xai-api-key-here
# או (legacy)
GROQ_API_KEY=your-groq-key-here

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# Frontend URL (לצורך CORS)
FRONTEND_URL=http://localhost:3002

# Port (אופציונלי, ברירת מחדל 8000)
PORT=8000

# PostgreSQL Database (Railway provides DATABASE_URL automatically)
# For local development, you can use individual parts:
# DATABASE_URL=postgresql://user:password@localhost:5432/stayclose
# Or:
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=stayclose

# Firebase Admin SDK
# אפשרות 1: נתיב לקובץ JSON
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=path/to/serviceAccountKey.json

# אפשרות 2: JSON string ישירות (לשימוש ב-Railway/Heroku)
# FIREBASE_SERVICE_ACCOUNT_KEY_JSON={"type":"service_account","project_id":"..."}

# Frontend Environment Variables (.env.local)
# העתק את הקובץ הזה ל-.env.local בשורש הפרויקט

NEXT_PUBLIC_API_URL=http://localhost:8000

# Firebase Config (מ-Firebase Console)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Google OAuth (legacy - לא נדרש עם Firebase)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
