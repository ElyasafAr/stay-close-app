    "@capacitor/push-notifications": "^6.0.5",
    "@capacitor/share": "^6.0.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "firebase": "^10.7.0",
    "i18next": "^23.7.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "react-icons": "^5.5.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.55.0",
