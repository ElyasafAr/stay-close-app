{
  "name": "stay-close-app",
  "version": "1.0.0",
  "description": "Stay Close - אפליקציית קרבה בעברית",
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/generate-firebase-sw.js",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "build:capacitor": "cross-env CAPACITOR_BUILD=true npm run build",
